<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".ShopPopupOKActivity">

    <!-- 타이틀 바 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E8A48E"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="SHOP"
        android:textSize="20dp"
        android:gravity="center"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_Item"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textColor="#4A4A4A"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="right|center|bottom"
        android:text="아이템이름"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/title"
        />
    <TextView
        android:id="@+id/txt_Price"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center|left|bottom"
        android:text="10B"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toRightOf="@id/txt_Item"
        />

    <TextView
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#E8A48E"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:text="구매 하시겠습니까?"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/txt_Item"
        />

    <android.widget.Button
        android:id="@+id/noBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="아니오"
        android:textStyle="bold"
        android:textSize="15dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/notice"
        tools:ignore="MissingConstraints"></android.widget.Button>


    <android.widget.Button
        android:id="@+id/yesBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="네"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:backgroundTint="#E8A48E"
        app:layout_constraintTop_toBottomOf="@id/notice"
        app:layout_constraintLeft_toRightOf="@id/noBtn"></android.widget.Button>



</androidx.constraintlayout.widget.ConstraintLayout>